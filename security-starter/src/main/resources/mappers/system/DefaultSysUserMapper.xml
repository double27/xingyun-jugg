<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lframework.starter.security.mappers.system.DefaultSysUserMapper">
    <resultMap id="SysUserDto" type="com.lframework.starter.security.dto.system.user.DefaultSysUserDto">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="telephone" property="telephone"/>
        <result column="gender" property="gender"/>
        <result column="available" property="available"/>
        <result column="lock_status" property="lockStatus"/>
        <result column="description" property="description"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="SysUserDto_sql">
        SELECT
            u.id,
            u.code,
            u.name,
            u.username,
            u.password,
            u.email,
            u.telephone,
            u.gender,
            u.available,
            u.lock_status,
            u.description,
            u.create_by,
            u.create_time,
            u.update_by,
            u.update_time
        FROM sys_user AS u
    </sql>

    <select id="query" resultMap="SysUserDto">
        <include refid="SysUserDto_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND u.code = #{vo.code}
                </if>
                <if test="vo.positionId != null and vo.positionId != ''">
                    AND u.id IN (SELECT user_id FROM sys_user_position WHERE position_id = #{vo.positionId})
                </if>
                <if test="vo.deptId != null and vo.deptId != ''">
                    AND u.id IN (SELECT user_id FROM sys_user_dept WHERE dept_id = #{vo.deptId})
                </if>
                <if test="vo.username != null and vo.username != ''">
                    AND u.username LIKE CONCAT('%', #{vo.username}, '%')
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND u.name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND u.available = #{vo.available}
                </if>
                <if test="vo.lockStatus != null">
                    AND u.lock_status = #{vo.lockStatus}
                </if>
            </if>
        </where>
        ORDER BY u.code
    </select>

    <select id="getById" resultMap="SysUserDto">
        <include refid="SysUserDto_sql"/>
        WHERE u.id = #{id}
    </select>
    <select id="selector" resultMap="SysUserDto">
        <include refid="SysUserDto_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND u.code = #{vo.code}
                </if>
                <if test="vo.username != null and vo.username != ''">
                    AND u.username LIKE CONCAT('%', #{vo.username}, '%')
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND u.name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND u.available = #{vo.available}
                </if>
            </if>
        </where>
        ORDER BY u.code
    </select>
</mapper>
