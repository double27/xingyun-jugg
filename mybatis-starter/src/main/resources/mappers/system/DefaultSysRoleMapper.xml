<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lframework.starter.mybatis.mappers.system.DefaultSysRoleMapper">
    <resultMap id="SysRoleDto" type="com.lframework.starter.mybatis.dto.system.role.DefaultSysRoleDto">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="permission" property="permission"/>
        <result column="available" property="available"/>
        <result column="description" property="description"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="SysRoleDto_sql">
        SELECT
            id,
            code,
            name,
            permission,
            available,
            description,
            create_by,
            create_time,
            update_by,
            update_time
        FROM sys_role
    </sql>
    <select id="query" resultMap="SysRoleDto">
        <include refid="SysRoleDto_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND code = #{vo.code}
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND available = #{vo.available}
                </if>
            </if>
        </where>
        ORDER BY code
    </select>
    <select id="findById" resultMap="SysRoleDto">
        <include refid="SysRoleDto_sql"/>
        WHERE id = #{id}
    </select>

    <select id="getByUserId" resultMap="SysRoleDto">
        <include refid="SysRoleDto_sql"/>
        WHERE id IN (
        SELECT
        role_id
        FROM sys_user_role
        WHERE user_id = #{userId}
        )
        ORDER BY code
    </select>
    <select id="selector" resultMap="SysRoleDto">
        <include refid="SysRoleDto_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND code = #{vo.code}
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND available = #{vo.available}
                </if>
            </if>
        </where>
        ORDER BY code
    </select>
</mapper>
