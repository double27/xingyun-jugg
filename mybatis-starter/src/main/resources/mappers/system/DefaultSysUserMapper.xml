<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lframework.starter.mybatis.mappers.system.DefaultSysUserMapper">

    <sql id="SysUserDto_sql">
        SELECT
            u.*
        FROM sys_user AS u
    </sql>

    <select id="query" resultType="com.lframework.starter.mybatis.entity.DefaultSysUser">
        <include refid="SysUserDto_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND u.code = #{vo.code}
                </if>
                <if test="vo.positionId != null and vo.positionId != ''">
                    AND u.id IN (SELECT user_id FROM sys_user_position WHERE position_id = #{vo.positionId})
                </if>
                <if test="vo.deptId != null and vo.deptId != ''">
                    AND u.id IN (SELECT user_id FROM sys_user_dept WHERE dept_id = #{vo.deptId})
                </if>
                <if test="vo.username != null and vo.username != ''">
                    AND u.username LIKE CONCAT('%', #{vo.username}, '%')
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND u.name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND u.available = #{vo.available}
                </if>
                <if test="vo.lockStatus != null">
                    AND u.lock_status = #{vo.lockStatus}
                </if>
            </if>
        </where>
        ORDER BY u.code
    </select>

    <select id="findById" resultType="com.lframework.starter.mybatis.entity.DefaultSysUser">
        <include refid="SysUserDto_sql"/>
        WHERE u.id = #{id}
    </select>
    <select id="selector" resultType="com.lframework.starter.mybatis.entity.DefaultSysUser">
        <include refid="SysUserDto_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND u.code = #{vo.code}
                </if>
                <if test="vo.username != null and vo.username != ''">
                    AND u.username LIKE CONCAT('%', #{vo.username}, '%')
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND u.name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND u.available = #{vo.available}
                </if>
            </if>
        </where>
        ORDER BY u.code
    </select>
</mapper>
