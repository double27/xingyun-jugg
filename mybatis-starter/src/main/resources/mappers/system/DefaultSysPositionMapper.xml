<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lframework.starter.mybatis.mappers.system.DefaultSysPositionMapper">

    <sql id="SysPosition_sql">
        SELECT
            *
        FROM sys_position
    </sql>
    <select id="query" resultType="com.lframework.starter.mybatis.entity.DefaultSysPosition">
        <include refid="SysPosition_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND code = #{vo.code}
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND available = #{vo.available}
                </if>
            </if>
        </where>
        ORDER BY code
    </select>
    <select id="findById" resultType="com.lframework.starter.mybatis.entity.DefaultSysPosition">
        <include refid="SysPosition_sql"/>
        WHERE id = #{id}
    </select>
    <select id="selector" resultType="com.lframework.starter.mybatis.entity.DefaultSysPosition">
        <include refid="SysPosition_sql"/>
        <where>
            <if test="vo != null">
                <if test="vo.code != null and vo.code != ''">
                    AND code = #{vo.code}
                </if>
                <if test="vo.name != null and vo.name != ''">
                    AND name LIKE CONCAT('%', #{vo.name}, '%')
                </if>
                <if test="vo.available != null">
                    AND available = #{vo.available}
                </if>
            </if>
        </where>
        ORDER BY code
    </select>
</mapper>
